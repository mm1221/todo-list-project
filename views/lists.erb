
<% if session[:success] %>
  <div class = "flash success">
    <p><%= session.delete(:success) %></p>
  </div>
<% end %>

<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <% if list_complete?(list)%>
      <li class="complete">
    <% else %>
      <li >
    <% end %>
      <a>
        <h2><a href="/lists/<%= @lists.index(list) %>"> <%= list[:name] %></a> </h2>
        <p>
          <%= str = 'P' %> / <%= todos_count(list) %>
        </p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>




